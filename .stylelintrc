{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-recess-order"
  ],
  "rules": {
    "selector-class-pattern": "^.[a-z-]?[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
        "tailwind",
        "apply",
        "responsive",
        "variants",
        "screen",
        "use"
        ]
      }
    ]
  }
}

